<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<!-- 게시물 리스트 -->
	<select id="getList" resultType="com.javaex.vo.BoardVo">
		<![CDATA[
			SELECT      b.no,
			            b.title,
			            b.content,
			            b.hit,
			            to_char(b.reg_date, 'yyyy-mm-dd hh24:mi') "date",
			            b.user_no,
			            u.name
			FROM        board b, users u
			where       b.user_no = u.no
			order by    b.no desc
		]]>
	</select>

	<!-- 게시물 읽기 -->
	<select id="getPost" parameterType="int" resultType="com.javaex.vo.BoardVo">
    	<![CDATA[
	    	select  b.no,
			        b.title,
			        b.content,
			        u.name,
			        b.hit,
			        to_char(b.reg_date,'yyyy-mm-dd hh24:mi') "date",
			        b.user_no
			from	board b, users u
			where	b.user_no = u.no
			and		b.no = #{no}
		]]>
	</select>

	<!-- 게시물 추가 -->
	<insert id="insert" parameterType="com.javaex.vo.boardVo">
		<![CDATA[
			insert into		board
			values			(seq_board_no.nextval,
							#{title},
							#{content},
							0,
							sysdate,
							#{userNo })
		]]>
	</insert>
























</mapper>