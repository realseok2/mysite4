<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	
	<!-- 회원가입 -->
	<insert id = "insert" parameterType = "com.javaex.vo.UserVo">
		<![CDATA[
			insert into		users
			values			(seq_users_no.nextval,
							#{id},
							#{password},
							#{name},
							#{gender}
			)
		]]>
	</insert>
	
	<!-- 로그인 -->
	<select id = "selectUser" parameterType = "com.javaex.vo.UserVo" resultType = "com.javaex.vo.UserVo">
		<![CDATA[
			SELECT  	no,
			        	name
			FROM    	users
			where   	id = #{id}
			and     	password = #{password}    
		]]>
	</select>
	
	<!-- 사용자 정보 가져오기 -->
	<select id = "getUser" parameterType = "int" resultType = "com.javaex.vo.UserVo">
		<![CDATA[
			select  	no,
						id,
			        	name,
			        	password,
			        	gender
			from    	users
			where   	no = #{no}  
		]]>
	</select>
	
	<!-- 회원정보 수정 -->
	<update id = "updateUser" parameterType = "com.javaex.vo.UserVo">
		<![CDATA[
			update		users
			set			name		= #{name},
						password	= #{password},
						gender		= #{gender}
			where		no			= #{no}
		]]>
	</update>






























</mapper>